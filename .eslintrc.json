{
    "env": {
        "es6": true,
        "commonjs": true,
        "node": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "plugins": [],
    "settings": {},
    "ignorePatterns": [
        "dist",
        "node_modules",
        "**/node_modules/*"
    ],
    "rules": {
        "no-trailing-spaces" : [
            "error",
            {
                "ignoreComments" : true
            }
        ],
        "quotes": ["error", "double"],
        "brace-style": ["error", "allman"],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 0,
                "CallExpression": {
                    "arguments": 1
                }
            }
        ],
        "no-tabs": "error",
        "no-mixed-spaces-and-tabs": "error",
        "template-curly-spacing": [
            "error",
            "always"
        ],
        "comma-spacing": "error",
        "comma-style": "error",
        "func-call-spacing": "error",
        "arrow-spacing": "error",
        "computed-property-spacing": "error",
        "array-bracket-spacing": "error",
        "space-before-blocks": "error",
        "space-infix-ops": "error",
        "object-curly-spacing": ["error", "always"],
        "key-spacing": [
            "error",
            {
                "beforeColon": true,
                "afterColon": true,
                "mode": "strict"
            }
        ],
        "keyword-spacing": [
            "error",
            {
                "before": true,
                "after": true,
                "overrides": {
                    "if": {
                        "before": false,
                        "after": false
                    },
                    "else": {
                        "before": false,
                        "after": true
                    },
                    "for": {
                        "before": false,
                        "after": false
                    },
                    "while": {
                        "before": false,
                        "after": false
                    },
                    "do": {
                        "before": false,
                        "after": false
                    },
                    "try": {
                        "before": false,
                        "after": true
                    },
                    "catch": {
                        "before": false,
                        "after": false
                    },
                    "finally": {
                        "before": false,
                        "after": true
                    },
                    "switch": {
                        "before": false,
                        "after": false
                    }
                }
            }
        ]
    }
}
